<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recharge_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jlgproject.activity.RechargeDialogActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bai"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dialog_close"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="12dp"
                    android:src="@mipmap/dialog_close" />

                <TextView
                    android:id="@+id/tv_dialog_leixin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <ListView
                android:id="@+id/lv_recharge_ka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

            <LinearLayout
                android:id="@+id/ll_recharge_tjyhkzf"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:src="@mipmap/recharge_tjyhk" />

                <TextView
                    android:id="@+id/tv_dialog_ka_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="18dp"
                    android:src="@mipmap/my_youjian" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dialog_yuezhifu"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:src="@mipmap/recharge_account" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:text="账户余额支付"
                    android:textSize="18sp" />


            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal"-->
        <!--&gt;-->
        <!--<ListView-->
        <!--android:id="@+id/lv_recharge_yhk"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <!--</ListView>-->

        <!--</LinearLayout>-->
    </RelativeLayout>

</RelativeLayout>
