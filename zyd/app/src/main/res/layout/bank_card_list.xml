<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:orientation="vertical"
       android:background="@drawable/bank_card_add_bk"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <ImageView
               android:id="@+id/iv_bc_yhk_tb"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="2"
               android:src="@mipmap/home_qbyy"
               android:layout_gravity="center"
               android:padding="4dp"
               />

           <LinearLayout
               android:layout_toRightOf="@id/iv_bc_yhk_tb"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="8"
               android:paddingLeft="20dp"
               >

               <TextView
                   android:id="@+id/tv_bn_yhk"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="2"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:text="xxx银行卡"
                   android:textSize="32sp"
                   />

               <TextView
                   android:id="@+id/tv_bn_lb"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="2"
                   android:text="储蓄卡"
                   android:textSize="18sp"
                   />

           </LinearLayout>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           >

           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="6"
               android:text="**** **** ****"
               android:textSize="18sp"
               android:gravity="right|center_vertical"
               />
           <TextView
               android:id="@+id/tv_bn_wh"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="4"
               android:text="0506"
               android:gravity="center_vertical"
               android:paddingLeft="10dp"
               />
       </LinearLayout>
   </LinearLayout>
    
</LinearLayout>