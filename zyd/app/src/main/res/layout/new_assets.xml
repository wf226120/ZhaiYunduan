<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai">
    <include layout="@layout/title_bar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="资  产  名  称:" />

                <EditText
                    android:id="@+id/et_organization_code"
                    style="@style/et_asset"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/line_layout">
                <TextView
                    style="@style/tv_asset"
                    android:text="资产性质分类:" />

            <RadioGroup
                android:id="@+id/rgroup"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
              >
                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@drawable/radio_state"
                    android:text="无形资产"
                    android:textColor="#666"
                    android:textSize="13sp"
                    />
                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@drawable/radio_state"
                    android:text="有形资产"
                    android:textColor="#666"
                    android:textSize="13sp"
                   />
            </RadioGroup>
        </LinearLayout>

            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="总  价  值:" />

                <EditText
                    android:id="@+id/et_enterpeise_name"
                    style="@style/et_asset"
                    android:inputType="number"
                    android:hint="元"/>
            </LinearLayout>

            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="资  产  数  量:" />

                <EditText
                    android:id="@+id/et_legal_person_name"
                    style="@style/et_asset"
                    android:inputType="number"
                     />
            </LinearLayout>

            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="可流通资产价值:" />

                <EditText
                    android:id="@+id/et_legal_person_icard"
                    style="@style/et_asset"
                    android:inputType="number"
                    />
            </LinearLayout>

            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="资  产  凭  证:" />

                <EditText
                    android:id="@+id/et_provinces"
                    style="@style/et_asset"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="资  产  详  情:" />

                <EditText
                    android:id="@+id/et_industry"
                    style="@style/et_asset"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="抵押等数量和价值:" />

                <EditText
                    android:id="@+id/et_contact_phone_number"
                    style="@style/et_asset"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/line_layout">
                <TextView
                    style="@style/tv_asset"
                    android:text="诉  讼  情  况:" />

                <RadioGroup
                    android:id="@+id/is_swout"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@drawable/radio_state"
                        android:text="未诉讼"
                        android:textColor="#666"
                        android:textSize="13sp"
                        />
                    <RadioButton
                        android:id="@+id/radio4"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@drawable/radio_state"
                        android:text="已诉讼"
                        android:textColor="#666"
                        android:textSize="13sp"
                        />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="流  通  资  产:" />

                <EditText
                    android:id="@+id/et_email"
                    style="@style/et_asset"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="归  属  人:" />

                <EditText
                    android:id="@+id/et_qq"
                    style="@style/et_asset"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="所  在  位  置:" />

                <EditText
                    android:id="@+id/et_wetchcat"
                    style="@style/et_asset"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="联  系  电  话:" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/et_asset"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="限制流通原因:" />

                <EditText
                    android:id="@+id/et_limit"
                    style="@style/et_asset"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="质  押  对  象:" />

                <EditText
                    android:id="@+id/et_object"
                    style="@style/et_asset"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="限制流通价值:" />

                <EditText
                    android:id="@+id/et_vlaue"
                    style="@style/et_asset"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout style="@style/line_layout">

                <TextView
                    style="@style/tv_asset"
                    android:text="限制流通负债量:" />

                <EditText
                    android:id="@+id/et_debt_num"
                    style="@style/et_asset"
                    android:inputType="number"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="285dp"
                android:layout_height="33dp"
                android:background="@drawable/login_btn"
                android:layout_gravity="center_horizontal"
                android:text="下一步"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_marginTop="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"></LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>